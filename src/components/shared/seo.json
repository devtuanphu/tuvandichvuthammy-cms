{
  "collectionName": "components_shared_seos",
  "info": {
    "displayName": "SEO",
    "icon": "search",
    "description": "SEO metadata component"
  },
  "options": {},
  "attributes": {
    "metaTitle": {
      "type": "string",
      "required": true,
      "maxLength": 120
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 260
    },
    "keywords": {
      "type": "string"
    },
    "canonicalURL": {
      "type": "string"
    },
    "metaRobots": {
      "type": "string",
      "default": "index, follow"
    },
    "ogTitle": {
      "type": "string"
    },
    "ogDescription": {
      "type": "text"
    },
    "ogImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "twitterTitle": {
      "type": "string"
    },
    "twitterDescription": {
      "type": "text"
    },
    "twitterImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    }
  }
}
